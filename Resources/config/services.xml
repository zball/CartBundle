<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zb_cart.cart.entity">ZB\CartBundle\Entity\Cart</parameter>
    </parameters>
    
    <services>
        <service id="zb_cart.cart_manager" class="ZB\CartBundle\Model\CartManager">
        </service>
        <service 
            id="zb_cart.cart_repository" 
            class="ZB\CartBundle\Repository\CartRepository"
            factory-service="doctrine.orm.default_entity_manager"
            factory-method="getRepository">
            <argument>%zb_cart.cart.entity%</argument>
        </service>
    </services>
    
</container>
